        let quizScores = {};

        // Fonction pour afficher/masquer les quiz
        function toggleQuiz(quizId) {
            const content = document.getElementById(`quiz${quizId}`);
            const arrow = content.previousElementSibling.querySelector('.quiz-arrow');
            
            if (content.classList.contains('open')) {
                content.classList.remove('open');
                arrow.classList.remove('open');
            } else {
                content.classList.add('open');
                arrow.classList.add('open');
            }
        }

        // Fonction pour g√©rer les r√©ponses aux quiz
        function selectAnswer(quizId, questionId, isCorrect) {
            const question = document.querySelectorAll(`#quiz${quizId} .quiz-question`)[questionId - 1];
            const options = question.querySelectorAll('.quiz-option');
            const feedback = question.querySelector('.quiz-feedback');
            const feedbackText = feedback.querySelector('.feedback-text');
            
            // D√©sactiver toutes les options
            options.forEach(option => {
                option.style.pointerEvents = 'none';
                if (option.onclick.toString().includes('true')) {
                    option.classList.add('correct');
                } else if (option === event.target) {
                    option.classList.add(isCorrect ? 'correct' : 'incorrect');
                }
            });

            // Afficher le feedback
            const data = quizData[quizId][questionId - 1];
            feedbackText.innerHTML = `<strong>${isCorrect ? '‚úÖ Correct !' : '‚ùå Incorrect.'}</strong><br>${data.explanation}`;
            feedback.classList.add('show');
            feedback.className = `quiz-feedback show ${isCorrect ? 'feedback-correct' : 'feedback-incorrect'}`;

            // Mettre √† jour le score
            if (!quizScores[quizId]) {
                quizScores[quizId] = { correct: 0, total: 0 };
            }
            
            if (isCorrect) {
                quizScores[quizId].correct++;
            }
            quizScores[quizId].total++;

            // Afficher le score final si toutes les questions sont r√©pondues
            if (quizScores[quizId].total === 5) {
                setTimeout(() => showQuizScore(quizId), 1000);
            }
        }

        // Fonction pour afficher le score final
        function showQuizScore(quizId) {
            const score = quizScores[quizId];
            const scoreElement = document.querySelector(`#quiz${quizId} .quiz-score`);
            const scoreText = scoreElement.querySelector('.score-text');
            const percentage = Math.round((score.correct / score.total) * 100);
            
            let message = '';
            let emoji = '';
            
            if (percentage >= 80) {
                emoji = 'üèÜ';
                message = 'Excellent ! Vous ma√Ætrisez parfaitement les concepts.';
            } else if (percentage >= 60) {
                emoji = 'üëç';
                message = 'Bon travail ! Quelques points √† revoir.';
            } else {
                emoji = 'üìö';
                message = 'Il faut r√©viser ce chapitre. Relisez les sections concern√©es.';
            }
            
            scoreText.innerHTML = `${emoji} Score : ${score.correct}/${score.total} (${percentage}%)<br>${message}`;
            scoreElement.classList.add('show');
        }

        // Fonction pour g√©rer les onglets
