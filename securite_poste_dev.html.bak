        // Fonction pour la navigation fluide
        function smoothScroll() {
            const links = document.querySelectorAll('.nav-links a');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                });
            });
        }

        // Fonction pour marquer la section active dans la navigation
        function updateActiveNav() {
            const sections = document.querySelectorAll('.section, #objectifs');
            const navLinks = document.querySelectorAll('.nav-links a');
            const navHeight = document.querySelector('.nav-fixed').offsetHeight;

            function highlightNavigation() {
                let current = '';
                const scrollPosition = window.pageYOffset + navHeight + 50;

                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionBottom = sectionTop + section.offsetHeight;

                    if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                        current = section.getAttribute('id');
                    }
                });

                if (window.pageYOffset < 100) {
                    current = 'objectifs';
                }

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    const href = link.getAttribute('href');
                    if (href === `#${current}`) {
                        link.classList.add('active');
                    }
                });
            }

            let scrollTimeout;
            window.addEventListener('scroll', () => {
                if (scrollTimeout) {
                    cancelAnimationFrame(scrollTimeout);
                }
                scrollTimeout = requestAnimationFrame(highlightNavigation);
            });

            highlightNavigation();
        }

        // Fonction pour sauvegarder les progr√®s
        function saveProgress() {
            const progress = {
                scores: quizScores,
                checkedItems: []
            };
            
            document.querySelectorAll('.checkbox.checked').forEach(checkbox => {
                const item = checkbox.closest('.checklist-item');
                const text = item.querySelector('span').textContent;
                progress.checkedItems.push(text);
            });
            
            localStorage.setItem('bts_security_poste_progress', JSON.stringify(progress));
        }

        // Fonction pour charger les progr√®s
        function loadProgress() {
            const saved = localStorage.getItem('bts_security_poste_progress');
            if (saved) {
                const progress = JSON.parse(saved);
                
                quizScores = progress.scores || {};
                
                if (progress.checkedItems) {
                    progress.checkedItems.forEach(itemText => {
                        const items = document.querySelectorAll('.checklist-item span');
                        items.forEach(span => {
                            if (span.textContent === itemText) {
                                const checkbox = span.closest('.checklist-item').querySelector('.checkbox');
                                checkbox.classList.add('checked');
                            }
                        });
                    });
                }
            }
        }

        // Fonction d'export des progr√®s
        function exportProgress() {
            const progress = {
                date: new Date().toLocaleDateString(),
                scores: quizScores,
                checkedItems: []
            };
            
            document.querySelectorAll('.checkbox.checked').forEach(checkbox => {
                const item = checkbox.closest('.checklist-item');
                const text = item.querySelector('span').textContent;
                progress.checkedItems.push(text);
            });

            const dataStr = JSON.stringify(progress, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            
            const link = document.createElement('a');
            link.href = url;
            link.download = `progres-securite-poste-${new Date().toISOString().slice(0,10)}.json`;
            link.click();
            
            URL.revokeObjectURL(url);
        }

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            smoothScroll();
            updateActiveNav();
            loadProgress();
            
            // Sauvegarder automatiquement les progr√®s
            setInterval(saveProgress, 30000);
            
            // Message de bienvenue
            setTimeout(() => {
                console.log('üîí Cours s√©curit√© poste d√©veloppeur charg√© !');
                console.log('üí° Vos progr√®s sont sauvegard√©s automatiquement.');
            }, 1000);
        });

        // Gestion de l'impression
        window.addEventListener('beforeprint', function() {
            document.querySelectorAll('.nav-fixed, .quiz-content, .nav-buttons').forEach(el => {
                el.style.display = 'none';
            });
        });

        window.addEventListener('afterprint', function() {
            document.querySelectorAll('.nav-fixed, .nav-buttons').forEach(el => {
                el.style.display = '';
            });
        });
    </script>
